{
  "name": "ut-spectool",
  "version": "0.1.0",
  "private": true,
  "main": "./build/electron.js",
  "scripts": {
    "build": "tsc && rollup -c",
    "build-client": "run-s build client",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "server": "kill $(lsof -ti:5000) 2>/dev/null; rollup -c -w",
    "start": "sirv public --no-clear --single",
    "client": "tsc && cross-env NODE_ENV=development electron .",
    "dist:mac": "tsc && rollup -c && electron-builder build --mac --publish never",
    "test": "jest"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-typescript": "^8.0.0",
    "@tsconfig/svelte": "^2.0.0",
    "@types/jest": "^27.0.2",
    "@types/page": "^1.11.5",
    "cross-env": "^7.0.3",
    "electron": "^15.2.0",
    "jest": "^27.2.5",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "svelte-check": "^2.0.0",
    "svelte-preprocess": "^4.0.0",
    "ts-jest": "^27.0.6",
    "tslib": "^2.0.0",
    "typescript": "^4.0.0"
  },
  "dependencies": {
    "knex": "^0.95.11",
    "mysql2": "^2.3.1",
    "page": "^1.11.6",
    "sirv-cli": "^1.0.0",
    "source-map-support": "^0.5.20"
  },
  "build": {
    "productName": "SpecTool",
    "appId": "edu.utexas.spectool",
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "productivity",
      "type": "distribution",
      "hardenedRuntime": "true"
    },
    "linux": {
      "target": [
        "AppImage",
        "snap"
      ],
      "category": "productivity"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      "assets/**"
    ]
  }
}
